<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Proiect_Apartament</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Proiect_Apartament.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="../Pages/Shared/_Layout.cshtml.css" asp-append-version="true" type="text/css" />
    <style>
        .nav-link {
            color: black !important;
            font-weight: 300 !important;
        }

        .nav-item:hover {
            background-color: cadetblue;
        }

        .nav-item:hover .nav-link {
            color: white !important;
        }
    </style>
</head>
<body style="background-color:black">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <!--<a class="navbar-brand" asp-area="" asp-page="/Index">Apartamente</a>-->
                <!--<a class="navbar-brand" asp-area="" asp-page="/Proprietari/Index">Proprietari</a>-->

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <img src="~/poze/icons8-apartments-64.png" style="width:30px; height:30px; position:center" />
                        <li class="nav-item" style="align-content:flex-start">
                            <a class="nav-link" style="color:black" asp-area="" asp-page="/Apartamente/Index">Apartamente</a>
                        </li>
                        <img src="~/poze/icons8-landlord-50.png" style="width:30px; height:30px; position:centerwidth:30px; height:30px; position:center" />
                        <li class="nav-item"> 
                            <a class="nav-link" asp-area="" asp-page="/Proprietari/Index">Proprietari</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Categorii/Index">Categorii</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Inchirieri/Index">Inchirieri</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />

                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted" style="background-color:cadetblue" >
        <div class="container" style="color:white; font-weight:bold">
            2022 - Apartamente de inchiriat - <a asp-area="" asp-page="/Privacy" style="color:white; text-decoration:none">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>